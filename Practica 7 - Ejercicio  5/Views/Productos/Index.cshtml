@model List<Practica_7___Ejercicio_5.Models.ViewModels.VentasViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>IDventa</th>
                <th>Cod</th>
                <th>Importe</th>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th>Vendedor</th>
                <th>Cliente</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IDventa</td>
                    <td>@oElemento.cod</td>
                    <td>@oElemento.importe</td>
                    <td>@oElemento.fecha</td>
                    <td>@oElemento.Cantidad</td>
                    <td>@oElemento.Vendedor</td>
                    <td>@oElemento.Cliente</td>
                    <td>
                        <a class="btn btn-default" href="~/Tabla/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>

            }
        </table>
    </div>

</div>